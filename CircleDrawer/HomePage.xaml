<Page x:Class="CircleDrawer.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CircleDrawer"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="HomePage">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>           
        </Grid.RowDefinitions>        
        <Button Name="Alg1Button" Grid.Column="1" Grid.Row="0" Content="Algorithm 1" VerticalAlignment="Center" Click="Alg1ButtonClick"/>
        <Button Name="Alg2Button" Grid.Column="3" Grid.Row="0" Content="Algorithm 2" VerticalAlignment="Center" Click="Alg2ButtonClick"/>
    </Grid>
</Page>
